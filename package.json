{
  "name": "sql-template-tag",
  "version": "3.0.0",
  "description": "ES2015 tagged template string for preparing SQL statements, works with `pg` and `mysql`",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "scripts": {
    "lint": "tslint \"src/**/*.ts\" --project tsconfig.json",
    "build": "rimraf dist/ && tsc",
    "specs": "jest --coverage",
    "test": "npm run build && npm run lint && npm run specs",
    "prepublish": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/blakeembrey/sql-template-tag.git"
  },
  "keywords": [
    "sql",
    "template",
    "string",
    "tag",
    "es2015",
    "es6",
    "pg",
    "postgres",
    "mysql"
  ],
  "author": {
    "name": "Blake Embrey",
    "email": "hello@blakeembrey.com",
    "url": "http://blakeembrey.me"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/blakeembrey/sql-template-tag/issues"
  },
  "homepage": "https://github.com/blakeembrey/sql-template-tag",
  "jest": {
    "roots": [
      "<rootDir>/src/"
    ],
    "transform": {
      "\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(tsx?|jsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^10.0.4",
    "jest": "^22.4.3",
    "ts-jest": "^22.4.4",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^7.0.0",
    "typescript": "^2.8.3"
  }
}
